# NPM Configuration for Vercel Deployment
# Fix Node v22 compatibility issues with postcss-nesting

# Allow installation of packages with peer dependency conflicts
legacy-peer-deps=true

# Ignore engine compatibility checks
engine-strict=false

# Use exact versions in package-lock.json
save-exact=false

# Automatically save installed packages to package.json
save=true

# Set registry (optional - use default npm registry)
# registry=https://registry.npmjs.org/
